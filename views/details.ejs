<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%result.forEach(val=>{%>
        <div>
            <h2>
                <%=val.name%>
            </h2>
            <img src="<%=val.image%>" alt="">
            <h3>
                <%=val.level%>
            </h3>

            <form action="/details/<%=val.id%>?_method=put" method="POST">
                <input type="text" name="name" value="<%=val.name%>">
                <input type="text" name="image" value="<%=val.image%>">
                <input type="text" name="level" value="<%=val.level%>">
                <input type="submit" value="update">
            </form>

            <form action="/details/<%=val.id%>?_method=delete" method="POST">
                <input type="submit" value="delete">
            </form>
        </div><br><br>
        <%})%>
</body>

</html>